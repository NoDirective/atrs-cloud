<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
    namespace="jp.co.ntt.atrs.domain.repository.boardingclass.BoardingClassRepository">

    <resultMap id="boardingClass-map" type="BoardingClass">
        <id property="boardingClassCd" column="boarding_class_cd" />
        <result property="boardingClassName" column="boarding_class_name" />
        <result property="extraCharge" column="extra_charge" />
    </resultMap>

    <!-- 搭乗クラス情報を全件取得 -->
    <select id="findAll" resultMap="boardingClass-map">
        SELECT
        boarding_class_cd,
        boarding_class_name,
        extra_charge
        FROM
        boarding_class
    </select>

    <select id="findOne" parameterType="BoardingClassCd"
        resultType="BoardingClass">
        SELECT
        boarding_class_cd,
        boarding_class_name,
        extra_charge
        FROM
        boarding_class
        WHERE
        boarding_class_cd = #{name}
    </select>
</mapper>