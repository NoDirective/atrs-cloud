            <b>customerNo</b>
        </field>
    </mapping>

    <mapping type="one-way">
        <class-a>jp.co.ntt.atrs.app.b2.ReservationForm</class-a>
        <class-b>jp.co.ntt.atrs.domain.model.Reservation</class-b>
        <field>
            <a>repFamilyName</a>
